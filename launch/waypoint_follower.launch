<?xml version="1.0"?>
<launch>

    <arg name="waypoint_topic"      default="/waypoints"    doc="topic with waypoints" />
    <arg name="follower"            default="pure_pursuit"  doc="pure_pursuit, stanley" />

    <node if="$(eval arg('follower')=='pure_pursuit')" pkg="autoware_mini" type="PurePursuitFollower.py" name="pure_pursuit_follower" output="screen" >
        <param name="waypoint_topic"    value="$(arg waypoint_topic)" />
    </node>

    <node if="$(eval arg('follower')=='stanley')" pkg="autoware_mini" type="StanleyFollower.py" name="stanley_follower" output="screen" >
        <param name="waypoint_topic"    value="$(arg waypoint_topic)" />
    </node>

</launch>